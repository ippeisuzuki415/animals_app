            <th colspan="3"></th>
          </tr>
        </thead>

          <tbody>

                <% @animals.each do |animal| %>
                <tr>
                 <td><%= link_to user_path(animal.user) do %>
                     <%= attachment_image_tag(animal.user, :profile_image, :fill, 50, 50,fallback: "no_image.jpg") %>
