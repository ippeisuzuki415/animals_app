<main>
        <p id="notice"></p>
        <div class="container">
 　 <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
     <% if @user.errors.any? %>
      <%= @user.errors.count %>errors prohibited this obj from being saved:
      <% @user.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
     <% end %>
      <h2>プロフィール編集</h2>
     <%= form_with model:@user, local:true do |f| %>
     <label for="inputName">Name</label>
     <%= f.text_field :name, autofocus: true, id:"inputName"%>

     <br><label for="inputImage">Image</label>
     <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>

     <br><label for="inputIntroduction">Introduction</label>
     <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction"%>

     <br><%= f.submit "Update User" %>
     <% end %>
     </div>
</main>
